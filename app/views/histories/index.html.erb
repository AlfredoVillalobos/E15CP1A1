<div class="row">
  <div class="col-xs-6 col-sm-8 col-md-8">
    <h1>Histories</h1>
  </div>
  
  <div>
    <% if current_user %>
      <div class="col-xs-4 col-sm-2 col-md-1">
        <%= link_to 'New History', new_history_path, class: "btn btn-info btn-sm" %>
      </div>
      <div class="col-xs-4 col-sm-2 col-md-1">
        <%= link_to 'Close session', session_path(session[:user_id]), method: :delete, class: "btn btn-info btn-sm" %>
      </div>
    <% else %>
      <div class="col-xs-4 col-sm-2 col-md-2">
        <%= link_to 'Create new user', users_sign_up_path, class:'btn btn-info btn-sm' %>
      </div>
      <div class="col-xs-4 col-sm-2 col-md-1">
        <%= link_to 'Sessions', users_sign_in_path, class:'btn btn-info btn-sm' %>
      </div>
    <% end %>
  </div>

  <div class = 'col-xs-8 col-sm-10 col-md-10'>
    <% if current_user %>
      <h2>Bienvenido <%= current_user.name %> </h2>
    <% else %>
      <h2> No has podido iniciar sesion </h2>
    <% end %>
  </div> 
</div>


<div class="row">
  <% @histories.reverse.each do |history| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= link_to(image_tag(history.picture.thumb), history) if history.picture? %>
        <div class="caption">
          <h3><%= history.title %></h3>
          <small><%= time_ago_in_words(history.created_at) %> ago</small>
          <p><%= history.content.truncate(150)  %></p>
          <p><%= link_to 'Show', history, class: "btn btn-primary" %> <%= link_to 'Edit', edit_history_path(history), class: "btn btn-warning" %> <%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>


<br>


